    <record id="fleet_maintenance_team_view_search" model="ir.ui.view">
        <field name="name">fleet.maintenance.team.search</field>
        <field name="model">sharevan.maintenance.team</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field string="Team" name="name"/>
                <filter string="Archived" domain="[('status', '=', 'deleted')]" name="deleted"/>
                <filter string="status" domain="[('status','=','running')]" name="status"/>
            </search>
        </field>
    </record>

    <!-- equipment.team : actions -->
    <record id="fleet_maintenance_team_action_settings" model="ir.actions.act_window">
        <field name="name">Maintenance teams</field>
        <field name="res_model">sharevan.maintenance.team</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_status': 1}</field>
        <field name="search_view_id" ref="fleet_maintenance_team_view_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('fleet_maintenance_team_view_tree')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('fleet_maintenance_team_view_kanban')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a team in the maintenance request
            </p>
        </field>
    </record>

    <record id="fleet_maintenance_schedule_form" model="ir.ui.view">
        <field name="name">fleet.maintenance.schedule.form</field>
        <field name="model">fleet.maintenance.schedule</field>
        <field name="arch" type="xml">
            <form string="Maintenance schedule">
                <sheet>
                    <group>
                        <label for="name" class="oe_edit_only"/>
                        <h2>
                            <field name="name" placeholder="e.g. Maintenance schedule for trailer truck"/>
                        </h2>
                    </group>
                    <group col="2">
                        <group col="2">
                            <field name="start_date"/>
                            <field name="day_interval"/>
                            <label for="odometer_interval"/>
                             <div class="o_row">
                                <field name="odometer_interval"/>
                                <field name="odometer_unit"/>
                             </div>
                        </group>
                        <group col="2">
                            <field name="status"/>
                            <field name="notify_date_before"/>
                            <label for="notify_odometer_before"/>
                            <div class="o_row" col="2">
                                <field name="notify_odometer_before"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_maintenance_schedule_view_tree" model="ir.ui.view">
        <field name="name">fleet.maintenance.schedule.tree</field>
        <field name="model">fleet.maintenance.schedule</field>
        <field name="arch" type="xml">
            <tree string="Maintenance schedule" edit="false">
                <field name="name"/>
                <field name="start_date"/>
                <field name="day_interval"/>
                <field name="odometer_interval"/>
            </tree>
        </field>
    </record>

    <record id="fleet_maintenance_schedule_action" model="ir.actions.act_window">
        <field name="name">Maintenance schedule</field>
        <field name="res_model">fleet.maintenance.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_status': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Setup a maintenance schedule, let the system warn you about vehicle that need maintenance
            </p>
        </field>
    </record>
